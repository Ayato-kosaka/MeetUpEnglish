<div id="overlay">
  <div id="modalWindow">
    <div class="modal-message-box">


      <% teacher = Teacher.find(teacherid) %>
      <h1>
        <%= teacher.name+"先生" %>
      </h1>

      <% if teacher.avatar.attached? %>
          <%= image_tag teacher.avatar, :size=>"400x400" %> <br>
      <% end %>

      <p>
        <%= simple_format(teacher.selfIntroduction) %>
      </p>

      <br><br><br>

      <% cafe = Cafe.find(cafeid) %>
      <h1>
        <%= cafe.name %>
      </h1>


      <p>
        <%= simple_format(cafe.description) %>
      </p>

      <p>
        <strong>Images:</strong><br>
      <% if cafe.images.attached? %>
        <% cafe.images.each do |image| %>
          <%= image_tag image, :size=>"400x400" %> <br>
        <% end %>
      <% end %>
      </p>


    </div>
    <button class="modal-close-btn">close</button>
  </div>
</div>
