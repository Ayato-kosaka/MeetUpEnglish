<p id="notice"><%= notice %></p>

<h1>Homes</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Peoplenum</th>
      <th>Teacher</th>
      <th>Cafeid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= City.find_by(id: home.city_id)&.name %></td>
        <td><%= home.date %></td>
        <td><%= home.start.strftime("%H:%M") %></td>
        <td><%= home.end.strftime("%H:%M") %></td>
        <td><%= home.peopleNum %></td>
        <td><%= home.teacher.name %></td>
        <td><%= home.cafe.name %></td>
        <td><%= link_to 'Show', home_path(home.id) %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home_path(home.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %>
