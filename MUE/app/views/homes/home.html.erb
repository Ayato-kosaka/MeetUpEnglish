<div id="area_list" style="width: 100%; display: table;">
  <ul style="display: block;">
    <% Region.all.each_with_index do |a,i| %>
    <li
    id="region_<%= a.id %>"
    <% if i==0 %>
    style="border-top: 1px solid gray;"
    <% end %> >
    <a><%=a.name%></a></li>
    <% end %>
  </ul>
</div>
