<div id="area_list" style="width: 100%; display: table;">
  <ul id="area_list_ul">
    <% Region.all.each_with_index do |a,i| %>
    <li
      <% if i==0 %>
      style="border-top: 1px solid gray;"
      <% end %>>
      <a class="region_a"><%=a.name%></a>

      <ul class="prefecture_list"
      <% if i==2 %>
      style="display: block;" id="display_show"
      <% else %> style="display: none;" <% end %>>
        <% if Prefecture.find_by(regionId: a.id).nil? %>
        <li><a>準備中</a></li>
        <% end %>
        <% Prefecture.where(regionId: a.id).each do |b| %>
        <li>
          <%= link_to b.name, homes_schedule_path(selected_prefecture: b.id), data: {"turbolinks"=>false}  %>
        </li>
        <% end %>
      </ul>

    </li>
    <% end %>
  </ul>
</div>
