        </div>
      </div>

    </div>

    <div id="footer1" class="cmn-footer"><div class="pagetop"> <a>↑PAGETOP</a></div>
    <div class="footer_contact_btn"><a class="contact_btn" data-remote="true" href="/contacts/new"><i class="far fa-envelope"></i>Contact</a></div>
    <div class="footer_page_btn"><a class="twitter_btn" href="https://twitter.com/meetup_english?ref_src=twsrc%5Etfw"><i class="fab fa-twitter"></i>Follow Twitter</a></div>
    <div class="footer_page_btn"><a class="insta_btn" href="https://www.instagram.com/meet_up_english?ref=badge"><i class="fab fa-instagram"></i>Follow Instagram</a></div>
    <div class="footer_page_btn"><a class="line_btn" href="http://nav.cx/alJd5yY"><i class="fab fa-line"></i>Follow Line</a></div>
    <div class="footer_page_btn"><a class="facebook_btn" href="https://www.facebook.com/Meet-Up-English-101228061233520/?modal=admin_todo_tour"><i class="fab fa-facebook-f"></i>Follow Facebook</a></div>
    <p class="copyright">© Meet Up English Group</p>
  </div>



    <footer>
      <div data-href="/"><%= link_to "Schedule", root_path,data: {"turbolinks"=>false} %></div>
      <div id="footer_center_div" data-href="/overview"><%= link_to "Overview", overview_path,data: {"turbolinks"=>false} %></div>
      <div data-href="/blogs"><%= link_to "Blog", blogs_path, data: {"turbolinks"=>false} %></div>
    </footer>

    <%= debug(params) if Rails.env.development? %>
    <%= debug(session[:user_id]) if Rails.env.development? %>
