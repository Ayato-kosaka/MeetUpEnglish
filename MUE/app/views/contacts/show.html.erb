<p id="notice"><%= notice %></p>

<% if @contact.name ~= /^[0-9]+$/ %>
  <%= form_with(model: @contact, url: contact_path(@contact.id), local: true) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.submit %>
  <% end %>
<% elsif %>

  <p>
    <strong>Name:</strong>
    <%= @contact.name %>
  </p>

<% end %>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @contact.title %>
</p>

<p>
  <strong>Message:</strong><br>
  <%= raw(@contact.message.gsub(/\n/, '<br>')) %>
</p>

<p>
  <strong>Createdat:</strong><br>
  <%= @contact.created_at %>
</p>

<% if @home %>
<p>
  <strong>from:</strong>
  <%= @home.date.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[@home.date.wday]})") %><br><%= @home.start.strftime("%H:%M") %>~<%= @home.end.strftime("%H:%M") %><br>
  <% @home.contacts.each do |contact|%>
    <br><br><p><%= contact.name %><br>
    <%= contact.message.split("\n")[0] %></p>
  <% end %>
</p>
<% end %>


<%= link_to 'Back', contacts_path, data: {"turbolinks"=>false} %>
