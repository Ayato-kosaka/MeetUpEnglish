<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<%= link_to 'New Teacher', new_teacher_path%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>gender</th>
      <th>Selfintroduction</th>
      <th>Email</th>
      <th>avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.gender ? 'man' : 'woman' %></td>
        <td><%= teacher.selfIntroduction.truncate(20) %></td>
        <td><%= teacher.email.truncate(20) %></td>
        <td><%= teacher.avatar.attached? %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
