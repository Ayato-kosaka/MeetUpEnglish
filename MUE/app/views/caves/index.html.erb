<p id="notice"><%= notice %></p>

<h1>Caves</h1>
<%= link_to 'New Cafe', new_cafe_path %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Cityid</th>
      <th>Name</th>
      <th>url</th>
      <th>Description</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caves.each do |cafe| %>
      <tr>
        <td><%= cafe.id %></td>
        <td><%= City.find(cafe.city_id).name if cafe.city_id %></td>
        <td><%= cafe.name %></td>
        <td><%= cafe.url? %></td>
        <td><%= cafe.description.truncate(20) %></td>
        <td><%= cafe.images.size %></td>
        <td><%= link_to 'Show', cafe %></td>
        <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
        <td><%= link_to 'Destroy', cafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
