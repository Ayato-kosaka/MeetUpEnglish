//top

@mixin default-top($background-color: #fff,$percent: 20%) {
  background-color: $background-color;
  position: relative;
  height: 100vh;
  display: block;
  overflow: hidden;
  a{display: flex;}
  .text-top{min-width: $percent;
    font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
  }
}
/* 無限ループアニメーション */
@keyframes infinity-loop {
  from {
    transform: translateX(0vw);
  }
  to {
    transform: translateX(-100%);
  }
}


#top-top{
  z-index: -1;
  position: fixed;
  display: flex;
  overflow: hidden;
  #logo-top{
    position: absolute;
    top: 1.4vh;
    z-index: 100;
    left: 10px;
    max-width: 44vw;
    max-height: 14vh;
    text-align: center;
    #logo-image-top{
      margin: 0 auto;
      display: block;
      max-width: 26.4vw;
      max-height: 12vh;
    }
    p{
      margin: 2px auto;
      font-family: Helevetica;
      font-weight: bold;
      font-style: oblique;
      @include sp {font-size: 5.2vw;}
      @include pc {font-size: 5vh;}
    }
  }
  #motion_text-top{
    color: white;
    position: absolute;
    top: 50%;
    left: 50vw;
    width: 100%;
    text-align: center;
    text-shadow: 4px 4px 4px #aaa;
    transform: translateY(-50%) translateX(-50%);
    h1{
      margin: 0;
      font-family: 'Parisienne','Tangerine','Cookie','Great Vibes','Dancing Script', cursive;
      @include sp(1200px){font-size: 10.2vw;line-height: 10.2vw;}
      @include pc(1200px){font-size: 19vh;line-height: 29vh}
    }
    p{
      margin: 0;
      font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
      @include sp(1200px){font-size: 9vw;line-height: 15vw;}
      @include pc(1200px){font-size: 6vh;line-height: 6vh;}
    }
  }
  #slide-top{
    animation: infinity-loop 25s infinite linear 4s both;
    flex-flow: row nowrap;
    @include default-top(black);
    display: flex;
    .image{
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
      @include sp {width: 220vw;}
      @include pc {width: 100vw;}
      height: 100vh;
    }
    .image-1{
      background-image: url(<%= asset_url("top/scroll-1.jpg") %>)    }
    .image-2{
      background-image: url(<%= asset_url("top/scroll-2.jpg") %>)    }
    .image-3{
      background-image: url(<%= asset_url("top/scroll-3.jpg") %>)    }
  }
}
#transparent-top{
  @include default-top(rgba(255, 255, 255, 0));
}
.text-top{
  text-align: center;
  margin: auto;
  @include sp {color: white!important;position: absolute;z-index: 1;left: 0;width: 100vw;}
  h2{border: none;font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
    @include pc{color: black;};@include sp{color: white;}}
  p{font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;}
  a{text-decoration: underline;font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
    @include sp{color: white;}}
}
.image-top{
  @include pc{max-width: 70vw;overflow: hidden;display: flex;}
  img{height: 100vh;
    @include pc{
      position: relative;
      top: 50%;
      left: 50%;
      -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);}
    @include sp {position: absolute;
      top: 50%;
      left: 50%;
      -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
      width: auto;
      height: 100%;}
  }
}
#transparent-top{cursor: auto}
#about-top{
  @include default-top(#fefbff,30%);
  .text-top{@include sp{top: 9%;}}
}
#schedule-top{
  @include default-top(#f8eefb,55%);
  .text-top{@include sp{top: 9%;}}
  a{flex-direction: row-reverse;}
}
#style-top{
  @include default-top(#f8f4f9,35%);
  .text-top{@include sp{top: 3%}}
}
p.read_more{
  text-decoration: underline;
}

.contact-top{
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 2;
  @include sp{width: 100%;}
  @include pc{width: 20%;}
  .contact_btn{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 50px;
    align-items: center;
    background-color: rgb(121,121,121);
    color: white;
    font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
  }
}

.footer-top{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: rgb(240, 240, 240);
  @include pc{height: 300px;}
  @include sp{height: 400px;margin: 0 0 50px 0;}
  color: #808080;
  font-family: 'EB Garamond', '游明朝体', 'YuMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN W3', HiraMinProN-W3, 'ヒラギノ明朝 ProN', 'Hiragino Mincho ProN', 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'HGS明朝E', serif;
  .footer1-top{
    display: flex;
    @include sp{flex-direction: column;}
    .footer1-1-top{
      display: flex;
      flex-direction: column;
      color: #808080;
      align-items: center;
      @include pc{width: 1000px;margin: 10px 0 0 0;}
      @include sp{margin-top: 30px}
      .logo-footer-top{
        img{
          height: 70px;
        }
      }
      .name-footer-top{
        font-size: 20px;
        line-height: 25px;
      }
      .name2-footer-top{
        line-height: 17px;
      }
    }
    .footer1-2-top{
      display: flex;
      align-items: center;
      @include pc{width: 100%;margin: 0 calc(0.20 * calc(100% - 335px));justify-content: space-between;}
      @include sp{justify-content: space-around;margin: 40px 0;}
      font-size: 20px;
      a{
        color: #808080;
      }
    }
  }
  .footer2-top{
    display: flex;
    justify-content: center;
    @include sp{flex-direction: column;}
    font-size: 17px;
    line-height: 23px;
    .footer2-1-top{
      text-align: center;
    }
    .footer2-2-top{
      display: flex;
      justify-content: space-between;
      width: 60px;
      @include pc{margin: 0 15px;}
      @include sp{margin: 0 auto;}
      a{
        color: #808080;
        p{margin: 0;}
      }
    }
  }
  .footer3-top{
    display: flex;
    justify-content: center;
    margin: 20px 0;
  }
}






